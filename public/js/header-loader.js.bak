// FunciÃ³n para verificar autenticaciÃ³n
function checkUserAuthentication() {
  try {
    console.log('ğŸ” Starting authentication check...');
    
    // Verificar localStorage
    const user = localStorage.getItem('as_user') || localStorage.getItem('user');
    console.log('ğŸ” Checking localStorage user:', user ? 'Found' : 'Not found');
    console.log('ğŸ” Raw localStorage data:', user);
    
    if (user) {
      try {
        const userData = JSON.parse(user);
        console.log('ğŸ” Parsed user data:', userData);
        if (userData && (userData.uid || userData.email)) {
          console.log('ğŸ” User data valid:', userData);
          console.log('ğŸ” Username found:', userData.username || userData.displayName || 'Not found');
          return true;
        }
      } catch (parseError) {
        console.warn('ğŸ” Error parsing user data:', parseError);
      }
    }
    
    // Verificar Firebase Auth
    if (typeof firebase !== 'undefined' && firebase.auth) {
      const currentUser = firebase.auth().currentUser;
      console.log('ğŸ” Firebase auth currentUser:', currentUser ? 'Found' : 'Not found');
      if (currentUser) {
        console.log('ğŸ” Firebase auth user found');
        return true;
      }
    } else {
      console.log('ğŸ” Firebase not available');
    }
    
    // Verificar tokens de Firebase en localStorage
    console.log('ğŸ” Checking Firebase tokens in localStorage...');
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      if (key && key.indexOf('firebase:authUser:') === 0) {
        try {
          const firebaseUser = JSON.parse(localStorage.getItem(key));
          if (firebaseUser && firebaseUser.uid) {
            console.log('ğŸ” Firebase token user found:', firebaseUser.uid);
            return true;
          }
        } catch (e) {
          console.warn('ğŸ” Error parsing Firebase token:', e);
        }
      }
    }
    
    console.log('ğŸ” No authentication found');
    return false;
  } catch (e) {
    console.warn('Error checking authentication:', e);
    return false;
  }
}

